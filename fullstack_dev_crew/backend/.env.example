# Environment variables for the backend

# Application Port
PORT=5000

# Database Configuration (PostgreSQL)
DB_TYPE=postgres
DB_HOST=localhost
DB_PORT=5432
DB_USERNAME=your_db_user
DB_PASSWORD=your_db_password
DB_DATABASE=task_platform_db
# Set to true for development to automatically sync schema (use migrations in production)
DB_SYNCHRONIZE=false
# Set to true to log SQL queries
DB_LOGGING=false

# JWT Secret and Expiry
JWT_SECRET=your_super_strong_jwt_secret
JWT_ACCESS_TOKEN_EXPIRY=15m
JWT_REFRESH_TOKEN_EXPIRY=7d

# File Storage Configuration (e.g., AWS S3)
FILE_STORAGE_PROVIDER=s3
AWS_S3_REGION=your_aws_region
AWS_S3_BUCKET_NAME=your_s3_bucket_name
AWS_ACCESS_KEY_ID=your_aws_access_key_id
AWS_SECRET_ACCESS_KEY=your_aws_secret_access_key

# Email Service Configuration (e.g., SendGrid)
EMAIL_PROVIDER=sendgrid
SENDGRID_API_KEY=your_sendgrid_api_key
EMAIL_FROM=noreply@yourplatform.com

# CORS Origin (Frontend URL)
CORS_ORIGIN=http://localhost:3000